# Environment variables for RAG-POC

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Salesforce OAuth Credentials
SALESFORCE_USERNAME=
SALESFORCE_PASSWORD=
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=

# Einstein Analytics Dataset
EINSTEIN_DATASET_ID=
EINSTEIN_DATASET_VERSION_ID=

# Database Configuration
SQLITE_DB_PATH=data/db/assets.db
CHROMA_DB_PATH=data/db/chroma_db

# Application Configuration
APP_NAME=RAG POC
APP_VERSION=1.0.0
DEBUG=True

# File Upload Configuration
MAX_FILE_SIZE_MB=50

# ALLOWED_FILE_TYPES will use default from settings.py

# Query Configuration
MAX_QUERY_LENGTH=1000
DEFAULT_SIMILARITY_THRESHOLD=0.7

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log